<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="64dp"
            android:clipToPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardProfileManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingHorizontal="24dp"
                android:paddingVertical="20dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_perso"
                    android:background="#3B82F6"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Jane Doe"
                    android:textSize="24sp"
                    android:textColor="#1F2937"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@id/imgProfile"
                    app:layout_constraintStart_toEndOf="@id/imgProfile"
                    app:layout_constraintEnd_toStartOf="@id/btnLogout"/>

                <TextView
                    android:id="@+id/tvUserRole"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Role: Donor"
                    android:textSize="16sp"
                    android:textColor="#4B5563"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName"
                    app:layout_constraintStart_toEndOf="@id/imgProfile"
                    app:layout_constraintEnd_toStartOf="@id/btnLogout"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textSize="12sp"
                    android:textColor="#EF4444"
                    app:strokeColor="#EF4444"
                    app:iconTint="#EF4444"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_gravity="center_vertical"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/cardMakeDonation"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make Donation"
                    app:chipIcon="@drawable/ic_auth"
                    app:iconStartPadding="8dp"
                    android:textColor="#3B82F6"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/cardVolunteer"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volunteer Hub"
                    app:chipIcon="@drawable/ic_volunteer"
                    app:iconStartPadding="8dp"
                    android:textColor="#10B981"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/cardManageEvents"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Events"
                    app:chipIcon="@drawable/ic_event_placeholder"
                    app:iconStartPadding="8dp"
                    android:textColor="#F59E0B"
                    android:visibility="gone"/>

            </com.google.android.material.chip.ChipGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E7EB"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upcoming and Past Events"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check out opportunities to contribute or receive aid."
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEventsFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="24dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_event_card"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>